client
dev tun
proto udp
remote-random
remote us-siliconvalley.privateinternetaccess.com 1197
# remote us-california.privateinternetaccess.com 1197
# PLEX over WAN route
route plex.tv 255.255.255.255 {{ plex_host }}
resolv-retry infinite
keepalive 10 60
nobind
persist-key
persist-tun
cipher aes-256-cbc
auth sha256
tls-client
remote-cert-tls server
auth-user-pass login.txt
comp-lzo
verb 1
reneg-sec 0
crl-verify crl.rsa.4096.pem
ca ca.rsa.4096.crt
disable-occ
# https://forum.netgate.com/topic/128325/solved-openvpn-reconnect-auth_failed/7
# pull-filter ignore "auth-token"
